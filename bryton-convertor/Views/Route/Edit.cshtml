@model Web.Models.EditRouteViewModel
@{
    ViewBag.Title = "Edit route";
}
<script src="http://maps.googleapis.com/maps/api/js?sensor=true" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/highcharts.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/scripts.js")" type="text/javascript"></script>

<h2>
    Edit '<span data-bind="text: Name"></span>'
</h2>
@Html.HiddenFor(x => x.RouteId)

<div id="main">
    <div id="right">
        <h4>Valley-/peakpoints</h4>
        <ul id="vplist" data-bind="foreach: markers">
            <li>
                <select data-bind="options: $parent.optionValues, value: type"></select>
                <span data-bind="text: elevation"></span> m high at <span data-bind="text: distance"></span> km
                <a href="#" data-bind="click: $parent.removeMarker">X</a>
            </li>
        </ul>  
        <br />
        <label for="routeName">Name:</label>
        <input name="routeName" data-bind='value: Name' />

        @using (Html.BeginForm("Download", "Route"))
        {
            <input type="hidden" id="downloadmodelinput" name="model" value="" />
            <input id="btnSave" type="submit" value="Download" />                    
        }        
    </div>
    <div id="left">
        <div id="map_canvas"></div>
        <div id="chartcontainer"></div>
    </div>
</div>
